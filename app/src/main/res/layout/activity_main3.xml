<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/home"
  tools:context=".MainActivity3">


  <androidx.fragment.app.FragmentContainerView
    android:id="@+id/fragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottomBar"/>
  <LinearLayout
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:paddingVertical="5dp"
    android:elevation="10dp"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    tools:targetApi="lollipop">
    <LinearLayout
      android:id="@+id/home_layout"
      android:background="@drawable/round_back_home_100"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:paddingHorizontal="5dp"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/home_image"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/home_selected_icon"/>
      <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textStyle="bold"
        android:textColor="@color/home"
        android:textSize="12sp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/message_layout"
      android:background="@android:color/transparent"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:paddingHorizontal="5dp"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/message_image"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/messages_icon"/>
      <TextView
        android:id="@+id/message_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textStyle="bold"
        android:textColor="@color/messages"
        android:textSize="12sp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/notification_layout"
      android:background="@android:color/transparent"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:paddingHorizontal="5dp"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/notification_image"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/notification_icon"/>
      <TextView
        android:id="@+id/notification_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textStyle="bold"
        android:textColor="@color/notification"
        android:textSize="11sp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
      android:id="@+id/profile_layout"
      android:background="@android:color/transparent"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:paddingHorizontal="5dp"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/profile_image"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/profile_icon"/>
      <TextView
        android:id="@+id/profile_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textColor="@color/profile"
        android:textSize="12sp"
        android:layout_marginStart="10dp"/>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>