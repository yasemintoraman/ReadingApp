<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FD5B6"
    tools:context=".ProfileFragment">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="15dp"
        android:src="@drawable/profile_photo"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="41dp"
          android:gravity="center"
          android:text="Sarah Maxwell"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="bold" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
          android:id="@+id/library_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_weight="0.5"
          android:text="My Library"
          android:textAllCaps="false"/>
        <Button
          android:id="@+id/post_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_weight="0.5"
          android:text="My Posts"
          android:textAllCaps="false"/>
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button
          android:id="@+id/to_read_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_weight="0.5"
          android:text="To Read"
          android:textAllCaps="false"/>
        <Button
          android:id="@+id/fav_btn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="20dp"
          android:layout_weight="0.5"
          android:text="Favorites"
          android:textAllCaps="false"
          android:onClick="FavoritesScreen"/>
      </LinearLayout>

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="0.9">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_weight="0.3"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

              <TextView
                  android:id="@+id/username1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:text=" @sarah98"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/text1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.8"
                  android:text="Check out this interesting book I found. What do you guys think?" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/add_comment"></ImageView>

                <ImageView
                    android:id="@+id/fav_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fav"></ImageView>

                <ImageView
                    android:id="@+id/repost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/repost"></ImageView>
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_weight="0.3"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/username2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:text=" @sarah98"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/text2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.8"
                  android:text=" 'The person, be it gentleman or lady, who has not pleasure in a good novel, must be intolerably stupid.'
              by Jane Austen" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/comment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/add_comment"></ImageView>

                <ImageView
                    android:id="@+id/fav_border2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fav"></ImageView>

                <ImageView
                    android:id="@+id/repost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/repost"></ImageView>
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_weight="0.3"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/username1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:text=" @sarah98"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/text3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.8"
                  android:text=" 'Good friends, good books, and a sleepy conscience: this is the ideal life.' by Mark Twain" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/comment3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/add_comment" />

                <ImageView
                    android:id="@+id/fav_border3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fav" />

                <ImageView
                    android:id="@+id/repost3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/repost" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_weight="0.3"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/username4"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:text=" @sarah98"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/text4"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.8"
                  android:text=" 'Good friends, good books, and a sleepy conscience: this is the ideal life.' by Mark Twain" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/comment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/add_comment" />

                <ImageView
                    android:id="@+id/fav_border4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fav" />

                <ImageView
                    android:id="@+id/repost4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/repost" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:layout_weight="0.3"
              android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

              <TextView
                  android:id="@+id/username5"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:text=" @sarah98"
                  android:textStyle="bold" />

              <TextView
                  android:id="@+id/text5"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.8"
                  android:text=" 'Good friends, good books, and a sleepy conscience: this is the ideal life.' by Mark Twain" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/comment5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/add_comment" />

                <ImageView
                    android:id="@+id/fav_border5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fav" />

                <ImageView
                    android:id="@+id/repost5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/repost" />
              </LinearLayout>
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>
      </ScrollView>
    </LinearLayout>
</FrameLayout>