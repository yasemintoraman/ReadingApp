<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="1dp"
            android:layout_toStartOf="@+id/search_btn"
            android:padding="14dp"
            android:src="@drawable/ic_add_box" />

        <ImageView
            android:id="@+id/notification_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/add_btn"
            android:padding="14dp"
            android:src="@drawable/ic_notifications" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:padding="14dp"
            android:src="@drawable/ic_black_search" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:text="Sarah Maxwell"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="80dp"
                android:text="My Library"
                android:textAllCaps="false"></Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:onClick="postScreen"
                android:text="My Posts"
                android:textAllCaps="false"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:text="To Do Read"
                android:textAllCaps="false"
                android:textSize="13sp"></Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="Favorites"
                android:textAllCaps="false"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="139dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/simg_1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bimg_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="46dp"
            android:layout_height="142dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bimg_2" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="142dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bottom_img_1" />
    </LinearLayout>
</LinearLayout>